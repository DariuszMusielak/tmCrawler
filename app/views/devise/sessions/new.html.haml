%h2 Zaloguj się
.container
  = simple_form_for(resource, as: resource_name, method: :post, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f|
    = f.error_notification
    .form-group
      = f.label "Email", class: 'col-lg-2'
      .col-lg-10= f.input :email, :required => false, :autofocus => true, label: false
    .form-group
      = f.label "Hasło", class: 'col-lg-2'
      .col-lg-10= f.input :password, :required => false, label: false
    = f.button :submit, "Zaloguj", class: 'btn-primary'
