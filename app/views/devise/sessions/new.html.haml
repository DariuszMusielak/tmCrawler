%h2 Zaloguj się
%br
= form_for resource, url: session_path(resource_name), html: { method: :post, class: "form form-horizontal" } do |f|
  .form-group
    = f.label "Email", class: 'col-lg-2 control-label', for: "email"
    .col-sm-10
      = f.text_field :email, required: true, autofocus: true, label: false, placeholder: "Email", class: "form-control"
  .form-group
    = f.label "Hasło", class: 'col-sm-2 control-label', for: "password"
    .col-sm-10
      = f.password_field :password, required: true, autofocus: false, label: false, placeholder: "Hasło", class: "form-control"
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit "Zaloguj się", class: "btn btn-success btn-sm"
