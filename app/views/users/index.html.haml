%br
%h1
  Lista użytkowników
%br
%table.table.table-hover
  %thead
    %tr
      %th Email
      %th.text-right Akcje
  %tbody
    - @users.each do |user|
      %tr
        %td= user.email
        %td.text-right
          = link_to 'Pokaż', user_path(user), class: "btn btn-default btn-sm"
          - if user == current_user
            = link_to 'Edytuj',  edit_user_registration_path(user), class: "btn btn-default btn-sm"
          = link_to 'Usuń', registration_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm"
